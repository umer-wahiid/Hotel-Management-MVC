@model IEnumerable<HManagement.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<div class="am-pagetitle">
    <h5 class="am-title">Room List</h5>
    <form id="searchBar" class="search-bar" action="index.html">
        <div class="form-control-wrapper">
            <input type="search" class="form-control bd-0" placeholder="Search...">
        </div><!-- form-control-wrapper -->
        <button id="searchBtn" class="btn btn-orange"><i class="fa fa-search"></i></button>
    </form><!-- search-bar -->
</div><!-- am-pagetitle -->
<div class="am-mainpanel">
    <div class="am-pagebody">

        <div class="card pd-20 pd-sm-40">
            <h3 class="card-body-title">Rooms</h3>

            <div class="table-wrapper">
                <table id="datatable1" class="table display responsive nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RoomNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoomType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Capacity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Availability)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Capacity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    <img src="@Url.Content(item.image_path)" class="rounded-circle" height="40" width="40">
                                </td>
                                <td>
                                    @if (item.Availability == "Available")
                                    {
                                        @Html.ActionLink(item.Availability, "EditAvailability", "Rooms", new { id = item.RoomId }, new { @class = "btn btn-warning" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink(item.Availability, "EditAvailability", "Rooms", new { id = item.RoomId }, new { @class = "btn btn-danger" })
                                    }
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.RoomId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.RoomId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.RoomId })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- table-wrapper -->
        </div><!-- card -->


    </div><!-- am-pagebody -->

